{
  "name": "Orion-X",
  "version": "0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "19",
  "description": "Eclipse Orion Chrome DevTools Extension",

  "icons": {
     "16": "/img/orion16.png",
     "24": "/img/orion24.png",
     "128": "/img/orion128.png"
  },

  "page_action": {
    "default_icon": "/img/orion16.png",
    "default_title": "Orion-X"
   },

  "devtools_page": "orion.html",

  "permissions" :
    [
      "*://*/*",
      "tabs",
      "contextMenus",
      "webNavigation",
      "webRequest",
      "debugger"
    ]
}