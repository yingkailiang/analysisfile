{
  "manifest_version": 2,

  "name": "cmd-r's log",
  "description": "take a screenshot every page load for select websites",
  "version": "0.0.3",
  "icons": {
    "16":"icon16.png",
    "32":"icon32.png",
    "48":"icon48.png",
    "128":"icon128.png"
  },

  "permissions": [
    "tabs", "http://*/*", "unlimitedStorage"
  ],

  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["d3.min.js", "background.js"]
  }
}
